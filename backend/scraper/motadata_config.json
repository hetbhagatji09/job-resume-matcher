{
  "site_name": "Motadata Careers",
  "base_url": "https://www.motadata.com/careers/",
  "wait_time": 15,
  "scroll_pause_time": 3,
  "infinite_scroll": false,

  "selectors": {
    "job_container": {
      "selector": "//div[contains(@class, 'opening-item')] | //div[contains(@class, 'career-opening')] | //section[contains(@class, 'career-section')] | //div[contains(@class, 'career-item')]", 
      "selector_type": "xpath"
    },
    "job_role": {
      "primary": {
        "selector": ".//h5[contains(text(), 'Job Title:')]/text()[normalize-space()] | .//strong[contains(text(), 'Job Title:')]/following-sibling::text()[normalize-space()]",
        "selector_type": "xpath"
      },
      "fallback": [
        {
          "selector": ".//h5 | .//strong",
          "selector_type": "xpath"
        }
      ]
    },
    "job_location": {
      "primary": {
        "selector": ".//p[contains(text(), 'Location:')]/text()[normalize-space()] | .//strong[contains(text(), 'Location:')]/following-sibling::text()[normalize-space()]",
        "selector_type": "xpath"
      },
      "fallback": [
        {
          "selector": ".//span[contains(text(), 'Ahmedabad') or contains(text(), 'Mumbai') or contains(text(), 'WFH') or contains(text(), 'WFO')]",
          "selector_type": "xpath"
        },
        {
          "type": "static",
          "value": "India"
        }
      ]
    },
    "job_experience": {
      "primary": {
        "selector": ".//p[contains(text(), 'Experience:')]/text()[normalize-space()] | .//strong[contains(text(), 'Experience:')]/following-sibling::text()[normalize-space()]",
        "selector_type": "xpath"
      },
      "fallback": [
        {
          "selector": ".//li[contains(text(), 'year') or contains(text(), 'experience')]",
          "selector_type": "xpath"
        }
      ]
    },
    "job_overview": {
      "primary": {
        "selector": ".//p[contains(text(), 'Overview:') or contains(text(), 'Position Overview:')] | .//div[contains(@class, 'overview')]",
        "selector_type": "xpath"
      },
      "fallback": [
        {
          "selector": ".//p[8]",
          "selector_type": "xpath"
        }
      ]
    },
    "job_responsibilities": {
      "primary": {
        "selector": ".//ul[preceding-sibling::strong[contains(text(), 'Roles & Responsibility')]] | .//ul[preceding-sibling::h5[contains(text(), 'Roles & Responsibility')]]",
        "selector_type": "xpath"
      },
      "fallback": [
        {
          "selector": ".//ul",
          "selector_type": "xpath"
        }
      ]
    }
  },

  "selenium_config": {
    "chrome_options": [
      "--no-sandbox",
      "--disable-dev-shm-usage",
      "--disable-logging",
      "--disable-gpu",
      "--log-level=3",
      "--silent",
      "--disable-blink-features=AutomationControlled",
      "--user-agent=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
    ]
  }
}
