{
  "site_name": "Infocusp Careers",
  "base_url": "https://infocusp.keka.com/careers/jobdetails/26712/",
  "wait_time": 15,
  "scroll_pause_time": 3,
  "infinite_scroll": false,
  "selectors": {
    "job_container": {
      "selector": "//div[contains(@class,'job-description-container')]",
      "selector_type": "xpath"
    },
    "job_role": {
      "primary": {
        "selector": "//h1[normalize-space()]",
        "selector_type": "xpath"
      }
    },
    "job_experience": {
      "primary": {
        "selector": "//ul[preceding-sibling::div[strong[contains(translate(., 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz'), 'requirement')]]]/li[contains(., 'year') or contains(., 'Year')]",
        "selector_type": "xpath"
      },
      "fallback": [
        {
          "selector": "//text()[contains(., 'years')]/parent::*",
          "selector_type": "xpath"
        },
        {
          "type": "static",
          "value": "Not specified"
        }
      ]
    },
    "job_location": {
      "primary": {
        "selector": "//div[contains(text(),'Location')]",
        "selector_type": "xpath"
      },
      "fallback": [
        {
          "selector": "//text()[starts-with(normalize-space(), 'Location')]/parent::*",
          "selector_type": "xpath"
        },
        {
          "type": "static",
          "value": "Not specified"
        }
      ]
    },
    "job_overview": {
      "primary": {
        "selector": "//div[strong[contains(translate(., 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz'), 'about the role')]]/following-sibling::div[1] | //div[strong[contains(translate(., 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz'), 'about the role')]]/following-sibling::div[not(./strong)][1]",
        "selector_type": "xpath"
      }
    },
    "job_responsibilities": {
      "primary": {
        "selector": "//div[strong[contains(translate(., 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz'), 'responsibil')]]/following-sibling::ul[1]/li | //strong[contains(translate(., 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz'), 'responsibil')]/parent::div/following-sibling::ul[1]/li",
        "selector_type": "xpath"
      }
    },
    "job_requirements": {
      "primary": {
        "selector": "//div[strong[contains(translate(., 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz'), 'requirement')]]/following-sibling::ul[1]/li | //strong[contains(translate(., 'ABCDEFGHIJKLMNOPQRSTUVWXYZ', 'abcdefghijklmnopqrstuvwxyz'), 'requirement')]/parent::div/following-sibling::ul[1]/li",
        "selector_type": "xpath"
      }
    }
  },
  "selenium_config": {
    "chrome_options": [
      "--no-sandbox",
      "--disable-dev-shm-usage",
      "--disable-logging",
      "--disable-gpu",
      "--log-level=3",
      "--silent",
      "--disable-blink-features=AutomationControlled",
      "--user-agent=Mozilla/5.0 (Windows NT 10.0; Win64; x64)"
    ]
  }
}
